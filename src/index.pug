extends ./layouts/MainLayout.pug

include ./mixins/Title.pug
include ./mixins/Input.pug
include ./mixins/Button.pug



mixin IntroListItem(text)
  li.intro__list__item.text.height-30 #{text}

mixin IntroList(items)
  ul.intro__list 
    for itemText in items
      +IntroListItem(itemText)



mixin ProcessListItem(text)
  li.process__list__item.text #{text}

mixin ProcessList(items)
  ul.column.process__list
    for itemText in items
      +ProcessListItem(itemText)



mixin GalleryListItem(src)
  li.gallery__list__item
    .gallery__list__item__arrow--top
      span
      span
    .gallery__list__item__arrow--bottom
      span
      span
    
    img.gallery__list__item__img(src=src, alt="Фото установленного дымохода")

mixin GalleryList(items)
  ul.gallery__list
    for itemSrc in items
      +GalleryListItem(itemSrc)



block content 

  //- intro block
  section.block
    .container
      +Title('Монтаж дымоходов')

      p pagination

      p.text.height-30 В #[span.text.text--highlight-red.weight-600 Дымоход.ру] вам помогут как приобрести, так и установить дымоход любой конфигурации. В нашем монтажном отделе, состоящим из трёх бригад работают квалифицированные специалисты, которые ежегодно проходят курсы повышения квалификации. Все работы проводим качественно и аккуратно, в короткий срок и на совесть .

      .intro__inner 
        .column.intro__column
          h2.title Lorem ipsum dolor sit amet #[span.title.size-huge Lorem ipsum]
          +IntroList([ 
            'Доступные цены', 
            'Собственное производсвто  Дымоходов', 
            'Выполнение необходимых работ, связанных с установкой камина, печи, котла', 
            'Гарантия (от трёх до десяти лет)', 
            'Работаем чисто, аккуратно, убираем за собой, не сквернословим', 
            'Только русские квалифицированные специалисты', 
            'Устанавливаем любые дымоходы всех производителей' 
          ])
        .column.intro__column.withbg
          

  //- installation process block
  section.block
    .container
      +Title('Процесс выполнения монтажа', 'title--separator', 'h2')
      
      .process__inner 
        +ProcessList([
          'Рассчёт предварительной заявки',
          'Изготовление Дымохода, покраска (если требуется)',
          'Замер объекта нашим инженером',
        ])
        +ProcessList([
          'Монтаж продукции, проверка и наладкапробный запуск системы и последующая эксплуатация',
          'Составление Коммерческого предложения по изделиям дымохода и окончательной сметы на  работы ',
          'Гарантийное обслуживание по соответствующем сроку',
        ])

  
  //- why us block
  section.block
    .container 
      +Title('Почему Дымоход.ру?', 'title--separator', 'h2')
      p.text.whyus__descr В отличие от других производителей, мы ручаемся за качество продукции, т.к. все Дымоходы изготавливаются из качественной стали, проверенного теплоизолятора, по современной технологии плазменной сварки «встык» 

      ul.whyus__list
        li.whyus__list__item 
          img.whyus__list_item__img(src="./assets/images/guarantee.svg")
          p.whyus__list__item__title.text.size-big.weight-700 Большой гарантийный срок
          p.whyus__list__item__descr.text 
            | Крепёж, стыковка элементов – #[span.text.text--highlight-red.weight--700 10 лет] 
            | Сквозная коррозия труб – #[span.text.text--highlight-red.weight--700 5 лет]
            | Гидроизоляция – #[span.text.text--highlight-red.weight--700 3 года]
        li.whyus__list__item 
          img.whyus__list_item__img(src="./assets/images/architect.svg")
          p.whyus__list__item__title.text.size-big.weight-700 Помощь в покупке агрегата 
          p.whyus__list__item__descr.text (печи, камина, котла), а также качественной установке на объекте с последующим гарантийным сервисом
        li.whyus__list__item 
          img.whyus__list_item__img(src="./assets/images/review.svg")
          p.whyus__list__item__title.text.size-big.weight-700 Реальные отзывы клиентов
          p.whyus__list__item__descr.text Убедитесь в добросовестности исполнения, прочитав Отзывы клиентов в специальном разделе.


  //- consultation block
  section.block#contact
    .container
      .consultation__inner
        .consultation__text
          +Title('НЕОБХОДИМА КОНСУЛЬТАЦИЯ?', '.size-big.weight-800', 'h2')
          p.text.size-big оставьте заявку или свяжитесь с нами в социальных сетях
        .consultation__socials 
          +Socials

        form.consultation__form(name="contact")
          p.text.size-big.weight-500 Для #[span.text.size-big.weight-700.text--highlight-orange консультации] заполните форму!
          p.text С Вами свяжутся в ближайшее время
          fieldset
            +Input('Ваше имя', 'name')
            +Input('Ваш телефон', 'phone')
            +Button('Оставить заявку')


